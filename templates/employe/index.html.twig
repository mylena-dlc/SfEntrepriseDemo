{% extends 'base.html.twig' %}

{% block title %}Liste des employés{% endblock %}

{% block body %}
    <h1>Liste des employés</h1>

    <a href="{{ path ('new_employe')}}" class="btn btn-success">Ajouter un employé</a>


    {% for employe in employes %}
        <a href="{{ path('show_employe', {'id':employe.id})}}">{{ employe }} </a> ({{employe.entreprise.raisonSociale}}) <br>
        <a class="btn btn-warning" href="{{ path('edit_employe', {'id': employe.id}) }}">Edit</a><br>
        <a class="btn btn-danger" href="">Supprimer</a><br>

    {% endfor %}

{% endblock %}
